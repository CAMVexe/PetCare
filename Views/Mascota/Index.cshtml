@model List<PetCare.Models.Mascota>
@{
    ViewData["Title"] = "Lista de Mascotas";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-primary mb-0"> Lista de Mascotas</h2>
            <a asp-controller="Mascota" asp-action="Registrar" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Registrar Nueva Mascota
            </a>
        </div>

@if (Model == null || !Model.Any())
{
            <div class="alert alert-warning text-center">
                No hay mascotas registradas.
            </div>
}
else
{
            <div class="table-responsive">
                <table class="table table-striped table-bordered align-middle text-center">
                    <thead class="table-dark">
                        <tr>
                            <th>Nombre</th>
                            <th>Especie</th>
                            <th>Raza</th>
                            <th>Edad</th>
                            <th>Dueño</th>
                            <th>Teléfono</th>
                            <th>Fecha Ingreso</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var mascota in Model)
                        {
                            <tr>
                                <td>@mascota.PetName</td>
                                <td>@mascota.Especie</td>
                                <td>@mascota.Raza</td>
                                <td>@mascota.Edad</td>
                                <td>@mascota.OwnerName</td>
                                <td>@mascota.OwnerTel</td>
                                <td>@mascota.DateIn.ToShortDateString()</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
}
