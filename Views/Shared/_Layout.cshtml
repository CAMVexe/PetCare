@{
    var title = ViewData["Title"] ?? "Clínica PetCare";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - PetCare</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Estilo personalizado minimalista -->
    <style>
        body {
            background-color: #f5f6fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        nav.navbar {
            background-color: #ffffff;
            box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-weight: bold;
            color: #007bff !important;
        }

        footer {
            text-align: center;
            margin-top: 50px;
            padding: 20px;
            color: #6c757d;
            font-size: 0.9rem;
        }

        main.container {
            margin-top: 40px;
        }

        a.nav-link {
            color: #333 !important;
            font-weight: 500;
        }

            a.nav-link:hover {
                color: #007bff !important;
            }
    </style>
</head>

<body>
    <!-- Navbar superior -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="bi bi-house-door-fill"></i> PetCare
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index">
                            <i class="bi bi-house"></i> Inicio
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Mascotas" asp-action="Create">
                            <i class="bi bi-plus-circle"></i> Registrar Mascota
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Mascotas" asp-action="Index">
                            <i class="bi bi-list-ul"></i> Lista de Mascotas
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido dinámico -->
    <main class="container mt-5 pt-5">
        @RenderBody()
    </main>

    <!-- Pie de página -->
    <footer class="border-top mt-5">
        <p>© @DateTime.Now.Year Clínica PetCare | Proyecto ASP.NET Core MVC</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Validaciones de ASP.NET Core -->
    @RenderSection("Scripts", required: false)
</body>
</html>
